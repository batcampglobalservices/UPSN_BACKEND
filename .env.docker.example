# .env.example for Docker deployment
# Copy this to backend/.env and update with your values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (leave commented for SQLite, or uncomment for PostgreSQL)
# DATABASE_URL=postgresql://user:password@postgres:5432/school_db

# Redis for WebSockets (provided by Docker Compose)
REDIS_URL=redis://redis:6379

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000

# ASGI Mode (true = WebSocket support with Daphne, false = WSGI with Gunicorn)
USE_ASGI=true

# Server Configuration
WEB_CONCURRENCY=2
GUNICORN_TIMEOUT=120
PORT=8000
